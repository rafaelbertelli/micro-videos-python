{
  "peacock.color": "#0c4b33",
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#137751",
    "activityBar.activeBorder": "#ca91ed",
    "activityBar.background": "#137751",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#ca91ed",
    "activityBarBadge.foreground": "#15202b",
    "sash.hoverBorder": "#137751",
    "statusBar.background": "#0c4b33",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#137751",
    "statusBarItem.remoteBackground": "#0c4b33",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#0c4b33",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#0c4b3399",
    "titleBar.inactiveForeground": "#e7e7e799"
  },
  "peacock.remoteColor": "#0c4b33",
  "python.linting.pylintEnabled": true,
  "python.linting.enabled": true,
  "python.linting.pylintPath": "/usr/local/bin/pylint",
  // "python.linting.pylintPath": "__pypackages__/3.10/bin/pylint",
  // "python.linting.pylintPath": "pylint",
  "python.linting.pylintArgs": ["--disable=C0111"],
  "python.autoComplete.extraPaths": [
    "${workspaceFolder}/__pypackages__/3.10/lib"
  ],
  "python.analysis.extraPaths": ["${workspaceFolder}/__pypackages__/3.10/lib"],
  "python.testing.pytestArgs": ["src", "--ignore", "__pypackages__", "-s"],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.pythonPath": "/usr/local/bin/python",

  "[dockercompose]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  "[python]": {
    "editor.tabSize": 4
  }
}
